<p id="notice"><%= notice %></p>

<h1>Listing Holidays</h1>

<h2> Find Holidays by Country </h2>
<% Holiday::COUNTRIES_HASH.each do |abbrv, full_name| %>
	<%= link_to "#{full_name}", holidays_path(:country => abbrv) %>	|
<% end %>

<%= link_to "Show all holidays", holidays_path %>

<table>
	
  <thead>
    <tr>
      <th>Name</th>
	  <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      	<tr>
        	<td><%= holiday.name %></td>
        	<td><%= holiday.country %> | </td>
        	<td><%= link_to 'Show', holiday %></td>
        	<td><%= link_to 'Edit', edit_holiday_path(holiday) if logged_in? %></td>
        	<td><%= link_to 'Destroy', holiday, method: :delete, data: { confirm: 'Are you sure?' } if logged_in? %></td>
      	</tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holiday', new_holiday_path %>
