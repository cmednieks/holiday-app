<div>
	<%= form_for :day, url: days_path do |f| %>
		<br>
		<%= f.label :year %>
		<%= f.select :year, Day::YEARS %>
		<br>
		<%= f.label :month %>
		<%= f.select :month, Day::MONTHS %>
		<br>
		<%= f.label :day_of_month %>
		<%= f.select :day_of_month, Day::DAYS %>
		<br>
		<%= f.submit "submit" %>
	
	<% end %>
</div>